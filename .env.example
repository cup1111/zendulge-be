# =================================
# Application Configuration
# =================================

# Environment setting (development, production, testing)
NODE_ENV=development
ENVIRONMENT=production

# Email bypass - if true, automatically login as first admin user (development only)
EMAIL_BYPASS=false

# Email validation bypass - if true, skip sending emails during development
BYPASS_EMAIL_VALIDATION=false

# Application details
NAME=techscrumapp
PORT=8000

# API configuration
API_PREFIX=/api

# Security secrets
EMAIL_SECRET=your_email_secret_here
FORGET_SECRET=your_forget_password_secret_here
ACCESS_SECRET=your_jwt_access_secret_here

# =================================
# Database Configuration
# =================================

# MongoDB connection string for tenants
DB_CONNECTION=mongodb://localhost:27017/zendulge

# =================================
# Domain Configuration
# =================================

# Main domain for the application
MAIN_DOMAIN=yourdomain.com

# =================================
# AWS Configuration
# =================================

# AWS region
AWS_REGION=us-east-1

# AWS credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# =================================
# Rate Limiting
# =================================

# Enable/disable rate limiter (true/false)
LIMITER=false
